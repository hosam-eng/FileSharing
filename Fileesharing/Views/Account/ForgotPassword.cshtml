@model Fileesharing.Models.ForgotPasswordViewModel
@inject IViewLocalizer localizer;
@{
	ViewData["Title"] = "ForgotPassword";
}


<section id="mu-contact">
	<div class="container">
		<div class="row">
			<div class="col-md-12">
				<div class="mu-contact-area">
					<!-- Title -->
					<div class="row">
						<div class="col-md-12">
							<div class="mu-title">
								<h2>@localizer["ChangePasswordLabel"]</h2>
							</div>
						</div>
					</div>
					<!-- Start Login Content -->
					<div class="mu-contact-content">
						<div class="row">

							<div class="col-md-12">
								<div class="mu-contact-form-area" style="padding-top:0px">
									<div id="form-messages"></div>
									<form method="post" class="mu-contact-form" asp-action="ForgotPassword" asp-controller="Account">
										<div asp-validation-summary="ModelOnly" class="text-danger"></div>
										<div class="form-group">
											<span class="fa fa-user mu-contact-icon"></span>
											<input asp-for="Email" type="email" class="form-control" placeholder="@localizer["Email"]" id="email" required>
											<span asp-validation-for="Email"></span>
										</div>
										<button type="submit" class="mu-send-msg-btn"><span>@localizer["Submit"]</span></button>
									</form>
								</div>
							</div>
						</div>
					</div>
					<!-- End Login Content -->
				</div>
			</div>
		</div>
	</div>
</section>


@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
    }
