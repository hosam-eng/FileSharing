@model Fileesharing.Models.RegisterViewModel
@inject IViewLocalizer localizer;
@{
    ViewData["Title"] = "Register";
}

<section id="mu-contact">
	<div class="container">
		<div class="row">
			<div class="col-md-12">
				<div class="mu-contact-area">
					<!-- Title -->
					<div class="row">
						<div class="col-md-12">
							<div class="mu-title">
								<h2>@localizer["Title"]</h2>
							</div>
						</div>
					</div>
					<!-- Start Register Content -->
					<div class="mu-contact-content">
						<div class="row">

							<div class="col-md-12">
								<div class="mu-contact-form-area" style="padding-top:0px">
									<div id="form-messages"></div>
									<form method="post" class="mu-contact-form" asp-action="Register" asp-controller="Account" asp-route-ReturnUrl="@Context.Request.Query["ReturnUrl"]">
										<div asp-validation-summary="ModelOnly" class="text-danger"></div>
										<div class="form-group">
											<span class="fa fa-user mu-contact-icon"></span>
											<input asp-for="FirstName" type="text" class="form-control" placeholder="@localizer["FirstName"]" id="firstname" required>
											<span asp-validation-for="FirstName"></span>
										</div>
										<div class="form-group">
											<span class="fa fa-user mu-contact-icon"></span>
											<input asp-for="LastName" type="text" class="form-control" placeholder="@localizer["LastName"]" id="lastname" required>
											<span asp-validation-for="LastName"></span>
										</div>
										<div class="form-group">
											<span class="fa fa-user mu-contact-icon"></span>
											<input asp-for="Email" type="email" class="form-control" placeholder="@localizer["Email"]" id="email" required>
											<span asp-validation-for="Email"></span>
										</div>

										<div class="form-group">
											<span class="fa fa-envelope mu-contact-icon"></span>
											
											<input asp-for="Password" type="password" class="form-control" placeholder="@localizer["Password"]" id="password" required>
											<span asp-validation-for="Password"></span>
										</div>
										<div class="form-group">
											<span class="fa fa-envelope mu-contact-icon"></span>
											<input asp-for="ConfirmPassword" class="form-control" type="password" placeholder="@localizer["confirmPassword"]" id="cinfirmpassword" required />
											<span asp-validation-for="ConfirmPassword" class="text-danger"></span>
										</div>

										<button type="submit" class="mu-send-msg-btn"><span>@localizer["Submit"]</span></button>
									</form>
								</div>
							</div>

						</div>
					</div>
					<!-- End Regiser Content -->
				</div>
			</div>
		</div>
	</div>
</section>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
